@{
    ViewData["Title"] = "Home Page";
}
@model List<Chef>

<div class="m-4">
@await Html.PartialAsync("_Navbar")
</div>
<h1 class="text-center">
    Check out our roster of chefs!
</h1>
<hr>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Chef Name</th>
            <th>Age</th>
            <th># of Dishes</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Chef chefs in Model)
        {
            int dob = chefs.DateOfBirth.Year;
            int currentYear = DateTime.Now.Year;
            int age = currentYear - dob;
            <tr>
                <td>@chefs.FirstName @chefs.LastName</td>
                    <td>@age</td>
                <td>@chefs.Dishes.Count()</td>
            </tr>
        }
    </tbody>
</table>